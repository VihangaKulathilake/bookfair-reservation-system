package com.bookfair.backend.controller;

import com.bookfair.backend.dto.ReservationRequest;
import com.bookfair.backend.dto.ReservationResponse;
import com.bookfair.backend.exception.GlobalExceptionHandler;
import com.bookfair.backend.exception.ResourceNotFoundException;
import com.bookfair.backend.exception.ValidationException;
import com.bookfair.backend.service.ReservationService;
import com.bookfair.backend.util.CommonMessages;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.junit.jupiter.MockitoExtension;
import org.springframework.test.web.servlet.MockMvc;
import org.springframework.test.web.servlet.setup.MockMvcBuilders;

import java.util.List;

import static org.mockito.ArgumentMatchers.any;
import static org.mockito.Mockito.when;
import static org.springframework.test.web.servlet.request.MockMvcRequestBuilders.post;
import static org.springframework.test.web.servlet.result.MockMvcResultMatchers.jsonPath;
import static org.springframework.test.web.servlet.result.MockMvcResultMatchers.status;

@ExtendWith(MockitoExtension.class)
public class ReservationControllerTest {

    private MockMvc mockMvc;

    @Mock
    private ReservationService reservationService;

    @InjectMocks
    private ReservationController reservationController;

    @BeforeEach
    public void setup() {
        mockMvc = MockMvcBuilders.standaloneSetup(reservationController)
                .setControllerAdvice(new GlobalExceptionHandler())
                .build();
    }

    @Test
    public void createReservation_Success() throws Exception {
        String requestJson = "{\"userId\":1,\"stallIds\":[1,2]}";

        ReservationResponse response = new ReservationResponse();
        response.setReservationId(100L);

        when(reservationService.createReservation(any(ReservationRequest.class))).thenReturn(response);

        mockMvc.perform(post("/api/reservations/create")
                .contentType("application/json")
                .content(requestJson))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.reservationId").value(100L));
    }

    @Test
    public void createReservation_UserNotFound_Returns404() throws Exception {
        String requestJson = "{\"userId\":999,\"stallIds\":[1]}";

        when(reservationService.createReservation(any(ReservationRequest.class)))
                .thenThrow(new ResourceNotFoundException(CommonMessages.USER_NOT_FOUND));

        mockMvc.perform(post("/api/reservations/create")
                .contentType("application/json")
                .content(requestJson))
                .andExpect(status().isNotFound())
                .andExpect(jsonPath("$.error").value("Not Found"))
                .andExpect(jsonPath("$.message").value(CommonMessages.USER_NOT_FOUND));
    }

    @Test
    public void createReservation_StallNotFound_Returns404() throws Exception {
        String requestJson = "{\"userId\":1,\"stallIds\":[999]}";

        when(reservationService.createReservation(any(ReservationRequest.class)))
                .thenThrow(new ResourceNotFoundException(CommonMessages.STALL_NOT_FOUND));

        mockMvc.perform(post("/api/reservations/create")
                .contentType("application/json")
                .content(requestJson))
                .andExpect(status().isNotFound())
                .andExpect(jsonPath("$.error").value("Not Found"))
                .andExpect(jsonPath("$.message").value(CommonMessages.STALL_NOT_FOUND));
    }

    @Test
    public void createReservation_MaxStallsExceeded_Returns400() throws Exception {
        String requestJson = "{\"userId\":1,\"stallIds\":[1,2,3,4]}";

        when(reservationService.createReservation(any(ReservationRequest.class)))
                .thenThrow(new ValidationException(CommonMessages.MAX_STALLS_EXCEEDED));

        mockMvc.perform(post("/api/reservations/create")
                .contentType("application/json")
                .content(requestJson))
                .andExpect(status().isBadRequest())
                .andExpect(jsonPath("$.error").value("Bad Request"))
                .andExpect(jsonPath("$.message").value(CommonMessages.MAX_STALLS_EXCEEDED));
    }

    @Test
    public void createReservation_StallNotAvailable_Returns400() throws Exception {
        String requestJson = "{\"userId\":1,\"stallIds\":[1]}";

        when(reservationService.createReservation(any(ReservationRequest.class)))
                .thenThrow(new ValidationException(CommonMessages.STALL_NOT_AVAILABLE));

        mockMvc.perform(post("/api/reservations/create")
                .contentType("application/json")
                .content(requestJson))
                .andExpect(status().isBadRequest())
                .andExpect(jsonPath("$.error").value("Bad Request"))
                .andExpect(jsonPath("$.message").value(CommonMessages.STALL_NOT_AVAILABLE));
    }
}
